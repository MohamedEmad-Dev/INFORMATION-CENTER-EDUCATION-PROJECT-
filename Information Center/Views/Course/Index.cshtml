@model IEnumerable<Information_Center.Models.Course>
@{
    ViewBag.Title = "Index";
    ViewBag.active1 = "active";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<style>
    .courses-list{
        margin-bottom:50px;
    }
    .courses-list .add-new {
        display: block;
        background: var(--blueColor);
        color: white;
        width: 190px;
        text-align: center;
        padding: 5px 0;
        border-radius: 5px;
        margin-bottom:30px;
    }
        .courses-list .course-view {
            background: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            border-radius: 13px;
            border: 1px solid var(--blueColor);
            transition: all 0.3s ease;
            overflow:hidden;
            margin-bottom:30px;
        }
            .courses-list .course-view:hover {
                color:white;
                background: var(--lightblue);
                border: 1px solid var(--lightblue);
            }
    
    .courses-list .course-view img {
        background: white;
        border-radius: 10px;
        width: 150px;
        object-fit: cover;
        height: 150px;
    }
        .courses-list .course-view p {
            width: 200px;
            height: 100px;
            overflow: auto;
        }
            .courses-list .course-view a {
                display: block;
                width: 100%;
                text-align: center;
                color: white;
                background: var(--blueColor);
                padding: 5px;
            }
</style>
<div class="courses-list">
    <div class="container">
        <h1>Your Courses</h1>
        <a href="@Url.Action("CreateCourse","Course")" class="add-new">Add New Course <i class="fa fa-plus"></i></a>
        @if(Model.Count() == 0) 
        { 
           <h1 style="text-align:center;">No courses added yet</h1>
        }
                <div class="row">
        @foreach(var course in Model)
            {

                    <div class="col-md-4 col-sm-4">
                        <div class="course-view">
                            @if (!String.IsNullOrEmpty(course.ImagePath))
                            {
                                <img src="@Url.Content(course.ImagePath)" alt="">

                            }
                            else
                            {
                                <img src="~/images/courses/default.png" alt="" >

                            }
                            <h1>@course.Title</h1>
                            <small>@course.Instructor.Name</small>
                            <p>@course.Description</p>

                            <a href="@Url.Action("Details",new { id = course.Id})">View <i class="fa fa-eye"></i></a>
                        </div>

                    </div>
            }
                </div>
    </div>
</div>



